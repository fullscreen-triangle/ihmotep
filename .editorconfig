root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.rs]
indent_size = 4
max_line_length = 100

[*.toml]
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,ts}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab

[*.{c,h,cpp,hpp}]
indent_size = 4
max_line_length = 100

[*.cu]
indent_size = 4
max_line_length = 100 